pipeline {
  agent any

  environment {
    AWS_REGION  = 'us-east-1'
    ACCOUNT_ID  = '827327671383'
    CLUSTER     = 'hello-world-cluster'
    SERVICE     = 'hello-world-service'
    REPO_NAME   = 'hello-world-app'
    IMAGE_TAG   = "${BUILD_NUMBER}"
    ECR_REPO    = "${ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/${REPO_NAME}"
  }

  stages {
    stage('Clone') {
      steps {
        git branch: 'main', url: 'https://github.com/alinaleem/ecs-jenkins.git'
      }
    }

    stage('Build Image') {
      steps {
        sh '''
          echo "üî® Building Docker image..."
          docker build -t $ECR_REPO:$IMAGE_TAG ./hello-world-app
          docker tag $ECR_REPO:$IMAGE_TAG $ECR_REPO:latest
        '''
      }
    }

    stage('Login to ECR') {
      steps {
        sh '''
          echo "üîê Logging into Amazon ECR..."
          aws ecr get-login-password --region $AWS_REGION \
          | docker login --username AWS --password-stdin $ECR_REPO
        '''
      }
    }

    stage('Push to ECR') {
      steps {
        sh '''
          echo "üì¶ Pushing image with tag $IMAGE_TAG to ECR..."
          docker push $ECR_REPO:$IMAGE_TAG
          echo "üì¶ Also pushing image as 'latest'..."
          docker push $ECR_REPO:latest
        '''
      }
    }

    stage('Deploy to ECS') {
      steps {
        sh '''
          echo "üöÄ Triggering ECS deployment..."
          aws ecs update-service \
            --cluster $CLUSTER \
            --service $SERVICE \
            --force-new-deployment \
            --region $AWS_REGION
        '''
      }
    }
  }
}
